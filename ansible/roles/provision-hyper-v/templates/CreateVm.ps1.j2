$VMName = {{ vm_id }}
$SwitchName = "{{ switch_name }}"
$VHDSize = {{ vhd_size }}
$VHDFile = "$VMName-os.vhdx"
$VHDDir = "{{ vhd_dir_windows }}"
$VHDPath = "$VHDDir$VHDFile"

$VM = @{
     Name = "$VMName"
     Generation = 2
     SwitchName = $SwitchName
     VHDPath = $VHDPath
}

#Write-Host "$VHDPath"
Resize-VHD -Path "$VHDPath" -SizeBytes $VHDSize

New-VM @VM
Set-VMFirmware "$VMName" -EnableSecureBoot Off
Add-VMDvdDrive "$VMName" -Path "$VHDDir$VMName-seed.iso"

Start-VM $VMName

